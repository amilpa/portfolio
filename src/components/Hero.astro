---
import Profile from "../assets/site_pic.jpg";
---

<div>
  <img
    src={Profile}
    class="h-[120px] relative top-12 rounded-full m-auto border-2 border-white dark:border-gray-"
    alt=""
  />
  <h1 class="relative top-14 text-3xl dark:text-white font-medium text-center">
    Amil P A
  </h1>
  <ul class="dynamic-texts relative top-14 text-center text-xl dark:text-white">
    <li>
      <span
        class="after:bg-zinc-100 after:dark:bg-neutral-800 after:border-l-2 after:border-black dark:after:border-white"
        >Designer</span
      >
    </li>
    <li>
      <span
        class="after:bg-zinc-100 after:dark:bg-neutral-800 after:border-l-2 after:border-black dark:after:border-white"
        >Developer</span
      >
    </li>
    <li>
      <span
        class="after:bg-zinc-100 after:dark:bg-neutral-800 after:border-l-2 after:border-black dark:after:border-white"
        >Creator</span
      >
    </li>
  </ul>
</div>

<style>
  .dynamic-texts {
    height: 30px;
    overflow: hidden;
  }

  .dynamic-texts li {
    position: relative;
    margin-bottom: 10px;
    top: 0;
    animation: slide 6s steps(3) infinite;
  }

  @keyframes slide {
    100% {
      top: -120px;
    }
  }

  .dynamic-texts li span {
    position: relative;
  }

  .dynamic-texts li span:after {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    animation: typing 2s steps(9) infinite;
  }

  @keyframes typing {
    40%,
    60% {
      left: 100%;
    }
    100% {
      left: 0;
    }
  }
</style>
