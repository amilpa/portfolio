---
interface Props {
  image: string;
  name: string;
  info: string;
  link: string;
}

const { image, name, info, link } = Astro.props;
---

<a href={link} target="_blank">
  <div
    class="flex flex-col gap-2 md:h-[250px] rounded-md transition-colors px-2 py-4 md:p-2"
  >
    <img
      src={`..${image}`}
      alt=""
      class="md:h-32 object-cover rounded-lg"
    />
    <div class="pt-2 md:pt-0 text-center">
      <h1 class="text-base md:text-lg font-semibold md:font-medium">
        {name}
      </h1>
      <p class="text-sm px-2">{info}</p>
    </div>
  </div>
</a>
