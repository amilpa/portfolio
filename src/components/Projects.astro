---
import ProjectCard from "./ProjectCard.astro";
import { Project_data } from "../data/projects";
---

<div id="projects" class="scroll-mt-24 mt-8 dark:text-white px-6 md:px-0">
  <div class="text-xl font-semibold border-b-2 border-black dark:border-white">
    Projects
  </div>
  <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      Project_data.map((project) => (
        <ProjectCard
          name={project.name}
          info={project.info}
          image={project.image}
          link={project.link}
        />
      ))
    }
  </div>
</div>
